# Onxy VMS Environment Configuration
# Copy this file to .env and update the values

# Server Configuration
PORT=3001
NODE_ENV=development

# MediaMTX Configuration
MEDIAMTX_CONFIG_PATH=./media-server/mediamtx.yml
MEDIAMTX_API_URL=http://localhost:9997
MEDIAMTX_WEBRTC_URL=http://localhost:8889

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
FRONTEND_PORT=3000

# Database Configuration (if using database in future)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=onxy_vms
# DB_USER=your_username
# DB_PASSWORD=your_password

# Security Configuration
# JWT_SECRET=your_jwt_secret_key_here
# API_KEY=your_api_key_here

# Recording Configuration
RECORDING_FORMAT=webm
RECORDING_QUALITY=high
AUTO_SAVE_RECORDINGS=true
RECORDING_FOLDER=./recordings

# Camera Configuration
DEFAULT_CAMERA_TIMEOUT=30000
MAX_CAMERAS=16
SUPPORTED_PROTOCOLS=whep,rtsp,hls

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Development Configuration
DEBUG=true
HOT_RELOAD=true
