{
  "name": "streaming-server",
  "version": "1.0.0",
  "description": "Streaming server with WebRTC player frontend",
  "targets": {
    "demo": {
      "source": "./frontend/index.html",
      "distDir": "./dist-demo",
      "isLibrary": false,
      "engines": {
        "browsers": "> 0.5%, last 2 versions, not dead"
      }
    }
  },
  "scripts": {
    "dev": "parcel ./frontend/index.html --dist-dir dist-demo --host 0.0.0.0 --port 3000 --no-cache",
    "dev:backend": "node backend/server.js",
    "dev:mediamtx": "cd media-server && mediamtx.exe",
    "dev:full": "concurrently \"npm run dev:backend\" \"npm run dev:mediamtx\" \"npm run dev\"",
    "build": "parcel build --target demo",
    "build:lib": "tsc --project tsconfig.json",
    "start": "node backend/server.js"
  },
  "dependencies": {
    "@eyevinn/csai-manager": "^0.1.2",
    "@eyevinn/whpp-client": "^0.1.2",
    "cors": "^2.8.5",
    "events": "^3.3.0",
    "express": "^4.18.2",
    "js-yaml": "^4.1.0",
    "multer": "^2.0.2"
  },
  "devDependencies": {
    "@parcel/packager-ts": "^2.8.3",
    "@parcel/transformer-typescript-types": "^2.8.3",
    "@types/events": "^3.0.0",
    "@types/node": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "concurrently": "^7.6.0",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "parcel": "^2.8.3",
    "prettier": "2.8.4",
    "typescript": "^4.6.3"
  },
  "engines": {
    "node": ">=18.15.0"
  }
}
